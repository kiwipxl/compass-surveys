{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "alwaysStrict": false,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true, 
    "rootDir": ".",
    "outDir": "build", 
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}
