{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "BaseQuestion": {
            "properties": {
                "id": {
                    "type": "string"
                },
                "subtitle": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "title"
            ],
            "type": "object"
        },
        "CheckboxQuestion": {
            "properties": {
                "choices": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "id": {
                    "type": "string"
                },
                "subtitle": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "checkbox"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "choices",
                "id",
                "title",
                "type"
            ],
            "type": "object"
        },
        "DropdownQuestion": {
            "properties": {
                "choices": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "id": {
                    "type": "string"
                },
                "subtitle": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "dropdown"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "choices",
                "id",
                "title",
                "type"
            ],
            "type": "object"
        },
        "LinearScaleQuestion": {
            "properties": {
                "id": {
                    "type": "string"
                },
                "max": {
                    "type": "number"
                },
                "min": {
                    "type": "number"
                },
                "subtitle": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "linear_scale"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "id",
                "max",
                "min",
                "title",
                "type"
            ],
            "type": "object"
        },
        "MultipleChoiceQuestion": {
            "properties": {
                "choices": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "id": {
                    "type": "string"
                },
                "subtitle": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "multiple_choice"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "choices",
                "id",
                "title",
                "type"
            ],
            "type": "object"
        },
        "ParagraphQuestion": {
            "properties": {
                "id": {
                    "type": "string"
                },
                "subtitle": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "paragraph"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "id",
                "title",
                "type"
            ],
            "type": "object"
        },
        "Question": {
            "anyOf": [
                {
                    "$ref": "#/definitions/ShortAnswerQuestion"
                },
                {
                    "$ref": "#/definitions/ParagraphQuestion"
                },
                {
                    "$ref": "#/definitions/MultipleChoiceQuestion"
                },
                {
                    "$ref": "#/definitions/CheckboxQuestion"
                },
                {
                    "$ref": "#/definitions/DropdownQuestion"
                },
                {
                    "$ref": "#/definitions/LinearScaleQuestion"
                }
            ]
        },
        "Response": {
            "properties": {
                "questionId": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                }
            },
            "required": [
                "questionId",
                "value"
            ],
            "type": "object"
        },
        "ShortAnswerQuestion": {
            "properties": {
                "id": {
                    "type": "string"
                },
                "subtitle": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "type": {
                    "enum": [
                        "short_answer"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "id",
                "title",
                "type"
            ],
            "type": "object"
        },
        "Submission": {
            "properties": {
                "responses": {
                    "items": {
                        "$ref": "#/definitions/Response"
                    },
                    "type": "array"
                }
            },
            "required": [
                "responses"
            ],
            "type": "object"
        },
        "Survey": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "questions": {
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "#/definitions/ShortAnswerQuestion"
                            },
                            {
                                "$ref": "#/definitions/ParagraphQuestion"
                            },
                            {
                                "$ref": "#/definitions/MultipleChoiceQuestion"
                            },
                            {
                                "$ref": "#/definitions/CheckboxQuestion"
                            },
                            {
                                "$ref": "#/definitions/DropdownQuestion"
                            },
                            {
                                "$ref": "#/definitions/LinearScaleQuestion"
                            }
                        ]
                    },
                    "type": "array"
                },
                "submissions": {
                    "items": {
                        "$ref": "#/definitions/Submission"
                    },
                    "type": "array"
                },
                "subtitle": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "questions"
            ],
            "type": "object"
        }
    }
}

